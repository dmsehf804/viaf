<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".ImageEnhanceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            app:cardBackgroundColor="#000">
            <Button
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:id="@+id/back_btn"
                android:padding="10dp"
                android:background="@drawable/back"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35sp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="17dp"
                android:layout_gravity="right"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/share"
                android:visibility="gone"
                android:background="@drawable/share"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info_frame"
                android:layout_gravity="right">
                <Button
                    android:id="@+id/info_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/top_info"/>
                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/save"
                    android:visibility="gone"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@android:integer/config_mediumAnimTime">
            <VideoView
                android:id="@+id/original_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="@android:integer/config_mediumAnimTime" />

            <VideoView
                android:id="@+id/sr_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="8" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#000"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:id="@+id/denoise_seek_card"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:padding="20dp"
                        android:id="@+id/x_btn_denoise"
                        android:background="@drawable/escape_bottom" />

                    <LinearLayout
                        android:layout_width="260dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="30sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="13dp"

                            android:layout_gravity="center"
                            android:layout_marginBottom="9dp"
                            android:background="@drawable/denoise_letter"
                            android:textSize="20sp"
                            android:clickable="true"
                            />

                        <SeekBar
                            android:id="@+id/denoise_seek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:progressDrawable="@drawable/seekerbar"
                            android:thumb="@drawable/seekerbar_ball"
                            />
                    </LinearLayout>

                    <Button
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="6dp"
                        android:padding="90dp"
                        android:id="@+id/v_btn_denoise"
                        android:background="@drawable/complete_bottom" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#000"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:id="@+id/contrast_seek_card"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:padding="10dp"
                        android:id="@+id/x_btn_contrast"
                        android:background="@drawable/escape_bottom" />

                    <LinearLayout
                        android:layout_width="260dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="30sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/contrast"
                            android:textSize="20sp" />

                        <SeekBar
                            android:id="@+id/contrast_seek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_gravity="center"
                            android:progressDrawable="@drawable/seekerbar"
                            android:thumb="@drawable/seekerbar_ball"
                            />
                    </LinearLayout>

                    <Button
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="6dp"
                        android:padding="10dp"
                        android:id="@+id/v_btn_contrast"
                        android:background="@drawable/complete_bottom" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#000"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:id="@+id/bright_seek_card"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:id="@+id/x_btn_bright"
                        android:padding="10dp"
                        android:background="@drawable/escape_bottom" />

                    <LinearLayout
                        android:layout_width="260dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="30sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="7dp"
                            android:background="@drawable/brightness"
                            android:textSize="20sp" />

                        <SeekBar
                            android:id="@+id/bright_seek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:progressDrawable="@drawable/seekerbar"
                            android:thumb="@drawable/seekerbar_ball"
                            />
                    </LinearLayout>

                    <Button
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="6dp"
                        android:id="@+id/v_btn_bright"
                        android:padding="10dp"
                        android:background="@drawable/complete_bottom" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#000"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:id="@+id/smooth_seek_card"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:id="@+id/x_btn_smooth"
                        android:padding="10dp"
                        android:background="@drawable/escape_bottom" />

                    <LinearLayout
                        android:layout_width="260dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="30sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="7dp"
                            android:background="@drawable/smoothing"
                            android:textSize="20sp" />

                        <SeekBar
                            android:id="@+id/smooth_seek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:progressDrawable="@drawable/seekerbar"
                            android:thumb="@drawable/seekerbar_ball"
                            />
                    </LinearLayout>

                    <Button
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="6dp"
                        android:id="@+id/v_btn_smooth"
                        android:padding="10dp"
                        android:background="@drawable/complete_bottom" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="#000"
                android:id="@+id/sr_btn_cardview">
                <Button
                    android:id="@+id/sr_btn"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/enhancing_button" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="#000"
                android:visibility="gone"
                android:id="@+id/postprocess_cardview"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp">
                    <Button
                        android:id="@+id/denoise_btn"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/deniose_icon"
                         />
                    <Button
                        android:id="@+id/contrast_btn"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/contrant_icon"
                         />
                    <Button
                        android:id="@+id/bright_btn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/brightness_icon"
                        />
                    <Button
                        android:id="@+id/smooth_btn"
                        android:layout_width="16dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/smoothing_icon"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            android:layout_gravity="bottom"
            ads:adUnitId="ca-app-pub-3202401163905235/6162146767">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

</LinearLayout>
