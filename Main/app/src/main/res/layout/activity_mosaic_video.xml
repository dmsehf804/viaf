<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".MosaicActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#000"
            android:layout_gravity="top">
            <Button
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:id="@+id/back_btn"
                android:background="@drawable/back"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35sp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info_frame"
                android:layout_gravity="right">
                <Button
                    android:id="@+id/info_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/top_info"
                    android:padding="10dp"
                     />
                <Button
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="17dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="60dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/share"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:background="@drawable/share"/>
                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:padding="10dp"
                    android:background="@drawable/save"
                    android:visibility="gone"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="@android:integer/config_mediumAnimTime">
            <VideoView
                android:id="@+id/original_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="@android:integer/config_mediumAnimTime" />
            <VideoView
                android:id="@+id/sr_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="@android:integer/config_mediumAnimTime" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#000"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:id="@+id/blur_seek_card"
                >

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:id="@+id/x_btn_blur"
                        android:padding="10dp"
                        android:background="@drawable/escape_bottom" />

                    <LinearLayout
                        android:layout_width="260dp"
                        android:layout_height="58dp"
                        android:layout_marginBottom="30sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="35dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="9dp"
                            android:background="@drawable/blur_letter"
                            android:textSize="20sp"
                            android:clickable="true"
                            />

                        <SeekBar
                            android:id="@+id/blur_seek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:progressDrawable="@drawable/seekerbar"
                            android:thumb="@drawable/seekerbar_ball"

                            />
                    </LinearLayout>

                    <Button
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="6dp"
                        android:id="@+id/v_btn_blur"
                        android:padding="10dp"

                        android:background="@drawable/complete_bottom" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#000"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:id="@+id/pixelable_seek_card"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:id="@+id/x_btn_pixelable"
                        android:padding="10dp"
                        android:background="@drawable/escape_bottom" />

                    <LinearLayout
                        android:layout_width="260dp"
                        android:layout_height="58dp"
                        android:layout_marginBottom="30sp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="13dp"

                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/pixelable_letter"
                            android:textSize="20sp" />

                        <SeekBar
                            android:id="@+id/pixelable_seek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:progressDrawable="@drawable/seekerbar"
                            android:thumb="@drawable/seekerbar_ball"
                            />
                    </LinearLayout>

                    <Button
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="6dp"
                        android:padding="10dp"
                        android:id="@+id/v_btn_pixelable"
                        android:background="@drawable/complete_bottom" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                app:cardBackgroundColor="#000"
                android:id="@+id/postprocess_cardview"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp">
                    <Button
                        android:id="@+id/pixel_btn"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="22sp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/mosaic"
                        />
                    <Button
                        android:id="@+id/blur_btn"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="22sp"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/blur"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/parent_ll">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/face_list_layout"
                        android:orientation="horizontal">

                    </LinearLayout>
                </HorizontalScrollView>
        </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="#000"
                android:id="@+id/sr_btn_cardview">
                <Button
                    android:id="@+id/mosaic_btn"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center"
                    android:background="@drawable/auto_mosaic_botton"
                    />
            </androidx.cardview.widget.CardView>

        </FrameLayout>
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            android:layout_gravity="bottom"
            ads:adUnitId="ca-app-pub-3202401163905235/6712811108">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>
</LinearLayout>