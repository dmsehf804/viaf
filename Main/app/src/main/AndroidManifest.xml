<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lilterest.viaf">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- 외부 저장소 read permission -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/app_logo"
        android:label="VIA.F"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/app_logo_round"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar"
        android:usesCleartextTraffic="true">
        <meta-data android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3202401163905235~6079559745"
            />
        <activity android:name="com.lilterest.viaf.MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="false">
    </activity>
        <activity
            android:name="com.lilterest.viaf.MosaicActivity"
            android:label="@string/title_activity_mosaic"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="false"/>
        <activity
            android:name="com.lilterest.viaf.VideoMosaicActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="false"/>
        <activity
            android:name="com.lilterest.viaf.ImageEnhanceActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="false"/>
        <activity
            android:name="com.lilterest.viaf.DataSelectActivity"
            android:label="@string/title_activity_data_select"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="false"/>
        <activity
            android:name="com.lilterest.viaf.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

    </application>

</manifest>